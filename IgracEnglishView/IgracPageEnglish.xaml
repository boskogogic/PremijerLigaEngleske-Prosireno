      xmlns:local="clr-namespace:HCIProjekat2.IgracView"
      mc:Ignorable="d" 
         Height="700" Width="900"
      Title="IgracPage">


	<Grid Margin="10,10,10,36" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
